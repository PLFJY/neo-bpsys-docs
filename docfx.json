{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "../neo-bpsys-wpf",
          "files": [
            "**/*.csproj"
          ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "**/images/**"
        ]
      }
    ],
    "output": "site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "neo-bpsys-wpf",
      "_appTitle": "neo-bpsys Docs",
      "_appFaviconPath": "images/favicon.ico",
      "_appLogoPath": "images/icon.png",
      "_enableSearch": true,
      "pdf": true
    }
  }
}